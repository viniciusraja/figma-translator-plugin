{
  "name": "ai-plugin-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n plugin,next 'npm run build:plugin -- --watch --define:SITE_URL=\\\"http://localhost:3000\\\"' 'next dev'",
    "start": "next start",
    "build": "concurrently -n plugin,next 'npm run build:plugin -- --define:SITE_URL=\\\"$npm_package_config_siteURL\\\"' 'next build'",
    "lint": "next lint",
    "build:plugin": "esbuild plugin/code.ts --bundle --target=es6 --loader:.svg=text --outfile=plugin/dist/code.js",
    "build:next": "next build",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "test": "jest --maxWorkers=25%",
    "test:watch": "jest --maxWorkers=25% --watchAll",
    "test:ci": "jest --bail --runInBand"
  },
  "dependencies": {
    "@chakra-ui/next-js": "^2.2.0",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@figma/plugin-typings": "*",
    "@types/node": "20.4.2",
    "@types/react": "18.2.15",
    "@types/react-dom": "18.2.7",
    "ai": "^2.1.20",
    "autoprefixer": "10.4.14",
    "chakra-react-select": "^4.7.6",
    "esbuild": "^0.18.12",
    "eslint": "8.45.0",
    "eslint-config-next": "13.4.10",
    "framer-motion": "^10.16.5",
    "next": "13.4.10",
    "openai": "^4.20.0",
    "postcss": "8.4.26",
    "prettier": "^3.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.48.2",
    "react-icons": "^4.12.0",
    "react-select": "^5.8.0",
    "typescript": "^5.3.2",
    "zod": "^3.21.4",
    "zustand": "^4.4.6"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.10",
    "concurrently": "^8.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "config": {
    "siteURL": "https://figma-translator-plugin.vercel.app/"
  }
}